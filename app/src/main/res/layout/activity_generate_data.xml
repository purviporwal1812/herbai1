<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".GenerateDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Generate Plant Data"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/themeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark Mode"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌐 Generate from APIs"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This will fetch plant data from Wikipedia, GBIF, and other botanical APIs."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Enter plant name"
                    app:startIconDrawable="@drawable/ic_search">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/plantNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/saveToDatabaseSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save to database"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"
                    android:checked="true" />

                <Button
                    android:id="@+id/generateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate Plant Data"
                    android:textSize="16sp"
                    style="@style/Widget.Material3.Button" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a plant name to generate data from APIs"
                android:textAlignment="center"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Result Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Generation Results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="16dp" />

                <!-- Plant Name -->
                <TextView
                    android:id="@+id/resultPlantNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plant Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Scientific Name -->
                <TextView
                    android:id="@+id/resultScientificNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scientific Name: Unknown"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="8dp" />

                <!-- Family -->
                <TextView
                    android:id="@+id/resultFamilyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Family: Unknown"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <!-- Medicinal Properties -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="💊 Medicinal Properties"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/resultMedicinalTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Information not available"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <!-- Uses -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌿 Uses"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/resultUsesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uses to be researched"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <!-- Habitat -->
                <TextView
                    android:id="@+id/resultHabitatTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏞️ Habitat: Various environments"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Generation Metadata -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 Generation Info"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/generationTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generation Time: 0.00s"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/apisUsedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APIs Used: Wikipedia, GBIF"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/databaseStatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Database: Saved ✅"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>