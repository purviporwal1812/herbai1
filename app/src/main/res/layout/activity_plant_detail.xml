<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:text="←"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorPrimary" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Theme Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/themeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Dark Mode"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <!-- Plant Name Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?android:attr/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/plantNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plant Name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/scientificNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scientific Name"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="?android:attr/textColorSecondary"
                    android:gravity="center"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Plant Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?android:attr/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plant Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/familyTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Family: Unknown"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/habitatTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Habitat: Unknown"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/genusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Genus: Unknown"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/dataSourceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Source: Knowledge Database"
                    android:textSize="12sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Medicinal Uses Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/usesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?android:attr/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicinal Uses and Properties"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/usesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading plant uses..."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:lineSpacingExtra="4dp" />

                <Button
                    android:id="@+id/readMoreButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read More"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Chemical Components Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/chemicalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?android:attr/colorBackground"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active Compounds"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/chemicalComponentsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="?android:attr/colorBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/viewImagesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Plant Images"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"
                    android:drawableStart="@android:drawable/ic_menu_gallery"
                    android:drawablePadding="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <Button
                    android:id="@+id/searchMoreButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search More Information"
                    android:textSize="14sp"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Warning Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⚠️"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Disclaimer: This information is for educational purposes only. Always consult with healthcare professionals before using plants medicinally."
                    android:textSize="12sp"
                    android:textColor="#E65100"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>