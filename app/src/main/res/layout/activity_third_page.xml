<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#F8F5FA"> <!-- Soft background for better readability -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ThirdPageActivity"
        android:padding="20dp"> <!-- Added padding for better spacing -->

        <!-- FAQ Question 1 -->
        <TextView
            android:id="@+id/faqQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is HerbAI?  ⬇"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="start"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/faqAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HerbAI is an AI-based app that classifies plant species based on leaf images."
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="#555555"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/faqQuestion1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- FAQ Question 2 -->
        <TextView
            android:id="@+id/faqQuestion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How does HerbAI work?  ⬇"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="start"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/faqAnswer1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/faqAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HerbAI uses a machine learning model to identify plant species based on leaf images provided by the user."
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="#555555"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/faqQuestion2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- FAQ Question 3 -->
        <TextView
            android:id="@+id/faqQuestion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is HerbAI free to use?  ⬇"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="start"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/faqAnswer2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/faqAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes, HerbAI is free for basic use, with premium features available for advanced analysis."
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="#555555"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/faqQuestion3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- FAQ Question 4 -->
        <TextView
            android:id="@+id/faqQuestion4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Internet connection needed?  ⬇"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="start"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/faqAnswer3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/faqAnswer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HerbAI works offline for basic classification, but an internet connection is required for additional insights and database updates."
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="#555555"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/faqQuestion4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
